<ul class="breadcrumbs">
  <li><%= link_to 'Home', root_path %></li>
  <li class="current"><a href="#">Budgets</a></li>
</ul>

<% if notice %>
	<div data-alert class="alert-box">
		<%= notice %>
		<a href="#" class="close">&times;</a>
	</div>
<% end %>

<div class="row">
  <div class="columns small-12">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @budgets.each do |budget| %>
          <tr>
            <td><%= budget.name %></td>
            <td><%= link_to '', budget, :class => "fa fa-eye" %></td>
            <td><%= link_to '', edit_budget_path(budget), :class => "fa fa-pencil" %></td>
            <td><%= link_to '', budget, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash-o" %></td>
          </tr>
        <% end %>
  				<tr>
  					<td colspan="5">
  						<%= link_to new_budget_path, :class => "button expand table-button" do %>
  							<i class="fa fa-plus"></i> New Budget
  						<% end %>
  					</td>
  				</tr>
      </tbody>
    </table>
  </div>
</div>
