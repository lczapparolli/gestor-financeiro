<div class="row">
  <div class="small-6 columns" >
    <%= form_tag('/login', method: 'POST') do |f| %>
      <div class="row">
        <div class="small-12 columns">
          <%= label_tag("email", 'E-mail') %>
          <%= email_field_tag("email", @user.email) %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <%= label_tag("password", "Password") %>
          <%= password_field_tag("password") %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <%= submit_tag("Login", class: "button success") %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="small-6 columns">
    <%= link_to "Register", "register" %>
  </div>
</div>
