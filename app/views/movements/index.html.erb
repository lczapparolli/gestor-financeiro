<ul class="breadcrumbs">
  <li><%= link_to 'Home', root_path %></li>
  <li class="current"><a href="#">Movements</a></li>
</ul>

<% if notice %>
	<div data-alert class="alert-box">
		<%= notice %>
		<a href="#" class="close">&times;</a>
	</div>
<% end %>


<div class="row">
	<div class="columns small-12">
		<table>
		  <thead>
			<tr>
        <th>Description</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Account</th>
        <th>Budget</th>
        <th>Period</th>
        <th colspan="3">Actions</th>
			</tr>
		  </thead>

		  <tbody>
			<% @movements.each do |movement| %>
			  <tr>
          <td><%= movement.description %></td>
          <td><%= movement.date.try(:strftime, "%d/%m/%Y") %></td>
          <td><%= number_to_currency(movement.amount) %></td>
          <td><%= movement.account.name %></td>
          <td><%= movement.budget.name %></td>
          <td><%= movement.period.name %></td>
					<td><%= link_to '', movement, :class => "fa fa-eye" %></td>
					<td><%= link_to '', edit_movement_path(movement), :class => "fa fa-pencil" %></td>
					<td><%= link_to '', movement, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash-o" %></td>
			  </tr>
			<% end %>
				<tr>
					<td colspan="9">
						<%= link_to new_movement_path, :class => "button expand table-button" do %>
							<i class="fa fa-plus"></i> New Movement
						<% end %>
					</td>
				</tr>
		  </tbody>
		</table>
	</div>
</div>
