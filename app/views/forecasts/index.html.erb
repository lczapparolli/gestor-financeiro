<ul class="breadcrumbs">
  <li><%= link_to 'Home', root_path %></li>
  <li class="current"><a href="#">Foracasts</a></li>
</ul>

<% if notice %>
	<div data-alert class="alert-box">
		<%= notice %>
		<a href="#" class="close">&times;</a>
	</div>
<% end %>


<div class="row">
	<div class="columns small-12">
		<table>
		  <thead>
			<tr>
        <th>Period</th>
        <th>Budget</th>
        <th>Amount</th>
        <th>Balance</th>
        <th colspan="3">Actions</th>
			</tr>
		  </thead>

		  <tbody>
			<% @forecasts.each do |forecast| %>
			  <tr>
          <td><%= forecast.period.name %></td>
          <td><%= forecast.budget.name %></td>
          <td><%= number_to_currency(forecast.amount) %></td>
          <td><%= number_to_currency(Movement.where(period_id: forecast.period_id, budget_id: forecast.budget_id).sum(:amount)) %></td>
					<td><%= link_to "", forecast, :class => "fa fa-eye" %></td>
					<td><%= link_to "", edit_forecast_path(forecast), :class => "fa fa-pencil" %></td>
					<td><%= link_to "", forecast, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash-o" %></td>
			  </tr>
			<% end %>
        <tr>
          <td colspan="7">
            <%= pagination Forecast, @page, @rows, @totalPages %>
          </td>
        </tr>
				<tr>
					<td colspan="7">
						<%= link_to new_forecast_path, :class => "button expand table-button" do %>
							<i class="fa fa-plus"></i> New Forecast
						<% end %>
					</td>
				</tr>
		  </tbody>
		</table>
	</div>
</div>
