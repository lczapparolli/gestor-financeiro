<ul class="breadcrumbs">
  <li><%= link_to 'Home', root_path %></li>
  <li class="current"><a href="#">Accounts</a></li>
</ul>

<% if notice %>
	<div data-alert class="alert-box">
		<%= notice %>
		<a href="#" class="close">&times;</a>
	</div>
<% end %>


<div class="row">
	<div class="col-small-100">
		<table class="table">
		  <thead>
			<tr>
			  <th width="100%">Name</th>
			  <th>Balance</th>
			  <th colspan="3">Actions</th>
			</tr>
		  </thead>

		  <tbody>
			<% @accounts.each do |account| %>
			  <tr>
					<td><%= account.name %></td>
					<td><%= number_to_currency(account.movements.sum(:amount)) %></td>
					<td><%= link_to "", account, :class => "link link-default fa fa-eye" %></td>
					<td><%= link_to "", edit_account_path(account), :class => "link link-default fa fa-pencil" %></td>
					<td><%= link_to "", account, method: :delete, data: { confirm: 'Are you sure?' }, :class => "link link-default fa fa-trash-o" %></td>
			  </tr>
			<% end %>
        <tr>
          <td colspan="5">
            <%= pagination Account, @page, @rows, @totalPages %>
          </td>
        </tr>
				<tr>
					<td colspan="5">
						<%= link_to new_account_path, :class => "button button-success" do %>
							<i class="fa fa-plus"></i> New Account
						<% end %>
					</td>
				</tr>
		  </tbody>
		</table>
	</div>
</div>
